<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

  <engine name="phyengine1" class="phyengine">

    <component name="usrprx1" class="usrprx">
      <parameter name="frequency" value="5010000000"/>
      <parameter name="rate" value="500000"/>
      <port name="output1" class="output"/>
    </component>

    <component name="tutofdmdemod1" class="tutofdmdemodulator">
      <parameter name="numdatacarriers" value="192"/>
      <parameter name="numpilotcarriers" value="8"/>
      <parameter name="numguardcarriers" value="55"/>
      <parameter name="cyclicprefixlength" value="16"/>
      <parameter name="plotframedetect" value="true"/>
      <parameter name="plotrxpreamble" value="true"/>
      <parameter name="ploteq" value="true"/>
      <parameter name="plotsymbols" value="true"/>
      <port name="input1" class="input"/>
      <port name="output1" class="output"/>
    </component>

    <component name="filerawwriter1" class="filerawwriter">
      <parameter name="filename" value="out.txt"/>
      <port name="input1" class="input"/>
    </component>

  </engine>

  <link source="usrprx1.output1" sink="tutofdmdemod1.input1" />
  <link source="tutofdmdemod1.output1" sink="filerawwriter1.input1" />

</softwareradio>
