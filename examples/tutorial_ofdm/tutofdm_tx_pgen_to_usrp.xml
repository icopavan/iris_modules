<?xml version="1.0" encoding="utf-8" ?> 

<softwareradio name="Radio1">

  <controller class="rffrontend">
    <parameter name="minfrequency" value="2490500000"/>
    <parameter name="maxfrequency" value="2494500000"/>
    <parameter name="minbandwidth" value="250000"/>
    <parameter name="maxbandwidth" value="2000000"/>
    <parameter name="mingain" value="0"/>
    <parameter name="maxgain" value="20"/>
    <parameter name="frontend" value="usrptx1"/>
    <parameter name="frontendengine" value="phyengine1"/>
  </controller>

  <engine name="stackengine1" class="stackengine">
    
    <component name="packetgenerator1" class="packetgenerator">
      <port name="topport1" class="io"/>
      <port name="bottomport1" class="io"/>
    </component>
  
  </engine>

  <engine name="phyengine1" class="phyengine">

    <component name="tutofdmmod1" class="tutofdmmodulator">
      <parameter name="numdatacarriers" value="192"/>
      <parameter name="numpilotcarriers" value="8"/>
      <parameter name="numguardcarriers" value="55"/>
      <parameter name="cyclicprefixlength" value="16"/>
      <parameter name="modulationdepth" value="1"/>
      <parameter name="plotpreamble" value="true"/>
      <parameter name="plotbins" value="true"/>
      <parameter name="plotframe" value="true"/>
      <port name="input1" class="input"/>
      <port name="output1" class="output"/>
    </component>

    <component name="signalscaler1" class="signalscaler">
      <parameter name="maximum" value="0.9"/>
      <port name="input1" class="input"/>
      <port name="output1" class="output"/>
    </component>

    <component name="usrptx1" class="usrptx">
      <parameter name="frequency" value="2492500000"/>
      <parameter name="rate" value="1000000"/>
      <parameter name="gain" value="5"/>
      <parameter name="streaming" value="false"/>
      <port name="input1" class="input"/>
    </component>

  </engine>

  <link above="packetgenerator1.bottomport1" sink="tutofdmmod1.input1" />
  <link source="tutofdmmod1.output1" sink="signalscaler1.input1" />
  <link source="signalscaler1.output1" sink="usrptx1.input1" />

</softwareradio>
